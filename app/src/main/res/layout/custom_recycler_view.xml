<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="200dp"
    android:layout_height="wrap_content">
    <!--card_view:cardUseCompatPadding="false"
    android:layout_marginBottom="16dp"
    card_view:cardCornerRadius="8dp"-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/demo3"
        android:id="@+id/custom_recycler_view_imageView" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#000000"
        android:alpha="0.8"
        android:layout_alignBottom="@+id/custom_recycler_view_imageView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:id="@+id/custom_recycler_view_textView1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:id="@+id/custom_recycler_view_textView2" />


    </RelativeLayout>

    </RelativeLayout>
    </android.support.v7.widget.CardView>
